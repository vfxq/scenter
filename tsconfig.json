{
  "compilerOptions": {
    "outDir": "./target",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "utils": ["client/utils/index.ts"],
      "components": ["client/components"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}